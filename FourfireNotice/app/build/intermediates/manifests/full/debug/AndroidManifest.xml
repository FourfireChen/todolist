<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lenovo.fourfirenotice"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="26" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_bookmark_black_48dp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_bookmark_black_48dp"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.lenovo.fourfirenotice.activity.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.lenovo.fourfirenotice.activity.EditActivity"
            android:theme="@style/EditActivity" />

        <receiver android:name="com.example.lenovo.fourfirenotice.tools.AlarmReceiver" />

        <activity
            android:name="com.example.lenovo.fourfirenotice.activity.ChooseCityActivity"
            android:label="请选择城市" >
        </activity>

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>